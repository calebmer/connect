{
  "compilerOptions": {
    "noEmit": true,
    "target": "esnext",
    "module": "esnext",
    "sourceMap": true,
    "moduleResolution": "node",
    "lib": ["esnext"],
    "types": ["jest"],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@connect/*": ["./packages/*"]
    }
  }
}
